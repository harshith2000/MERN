<%- include("header") -%>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>
  <div class="box">
    <% todolist.forEach(function(todo){ %>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= todo._id %>" onChange="this.form.submit()">
          <p> <%= todo.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
    <% }) %>
    <form class="item" action = "/"  method="post">
      <input type="text" name="newtodo" placeholder="Enter To-do" autocomplete="off" autofocus>
      <button type = "submit" name="typeOfList" value = "<%= listTitle %>"> + </button>
    </form>
  </div>
</body>

<%- include("footer") -%>
