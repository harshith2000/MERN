<%- include("header") -%>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>
  <div class="box">
    <% for(let i=0;i<todolist.length;i++){ %>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= todolist[i] %>" onChange="this.form.submit()">
          <p> <%= todolist[i] %></p>
        </div>
      </form>
    <% } %>
    <form class="item" action = "/"  method="post">
      <input type="text" name="newtodo" placeholder="Enter To-do" autocomplete="off">
      <button type = "submit" name="typeOfList" value = "<%= listTitle %>"> + </button>
    </form>
  </div>
</body>

